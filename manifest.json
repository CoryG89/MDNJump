{
  "manifest_version": 2,

  "name": "MDNJump",
  "version": "0.1.4",

  "description": 
    "Quickest way to look something up on MDN ( Mozilla Developer Network ).",

  "icons": { 
    "16" : "ico/16.png",
    "48" : "ico/48.png",
    "128" : "ico/128.png"
  },

  "browser_action": {
	  "default_icon": "ico/48.png",
	  "default_title": "MDNJump"
  },

  "permissions": ["contextMenus", "tabs", "activeTab"],
  
  "omnibox": {
    "keyword": "mdn-"
  },

  "background": {
    "scripts": ["index.js"],
    "persistent": false
  }
}
